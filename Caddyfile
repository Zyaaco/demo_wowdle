# Caddyfile for wowdle.xyz
# - Routes traffic for wowdle.xyz to the `web` Docker service on port 5545
# - Redirects www -> non-www
# - Enables gzip/zstd encoding and some common security and caching headers



# Primary site (apex + www)
wowdle.xyz, www.wowdle.xyz {
    # Redirect requests that arrive to the www host to the canonical apex host
    @from_www {
        host www.wowdle.xyz
    }
    redir @from_www https://wowdle.xyz{uri} permanent

    # Enable compression
    encode gzip zstd

    # Common security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "no-referrer-when-downgrade"
        Feature-Policy "accelerometer 'none'; camera 'none'; microphone 'none'; geolocation 'none'"
    }

    # Aggressively cache static assets served by the app
    @static {
        path *.css *.js *.mjs *.svg *.png *.jpg *.jpeg *.gif *.ico *.webp *.avif *.woff2 *.woff *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=2592000, immutable"

    # Reverse proxy to the application container on the Docker network (use service name)
    reverse_proxy web:80 {
        # Forward original Host header and client IP info
        header_up Host {http.request.host}
        header_up X-Real-IP {http.request.remote}
        header_up X-Forwarded-For {http.request.header.X-Forwarded-For}
    }

    # Optional: tune log format or other directives here
}
